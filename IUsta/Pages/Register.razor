@page "/register"

<style>
    * {
    box-sizing: border-box;
}

body {
    font-family: 'Poppins', sans-serif;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    position: relative;
}

.container a{
    color: #02ccfe;
}


.create {
    display: inline;
}

.input-group label{
    margin-right: 5%;
}

form {
    background-color: #fff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
    border-radius: 5px;
    max-width: 400px;
    width: 100%;
}

h2 {
    text-align: center;
    margin-bottom: 5%;
}

.input-group {
    margin-bottom: 10px;
}

label {
    display: flex; 
    align-items: center; 
    margin-bottom: 5%;
}

input[type="text"],
input[type="email"],
input[type="password"] {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    margin-bottom: 10px;
}

button {
    background-color: #02ccfe;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    display: block;
    margin-bottom: 5%;
}

.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
    margin-left: 10px; 
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    -webkit-transition: .4s;
    transition: .4s;
}

.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    -webkit-transition: .4s;
    transition: .4s;
}

input:checked + .slider {
    background-color: #02ccfe;
}

input:focus + .slider {
    box-shadow: 0 0 1px #02ccfe;
}

input:checked + .slider:before {
    -webkit-transform: translateX(26px);
    -ms-transform: translateX(26px);
    transform: translateX(26px);
}

.slider.round {
    border-radius: 34px;
}

.slider.round:before {
    border-radius: 50%;
}

@@media screen and (max-width: 480px) {
    .switch {
        width: 40px;
        height: 24px;
    }
}

</style>

<div class="container">
    <form>
        <h2>Create Account</h2>
        <div class="input-group">
            <label>First Name:</label>
            <input type="text" name="firstname" placeholder="Enter first name">
        </div>
        <div class="input-group">
            <label>Last Name:</label>
            <input type="text" name="lastname" placeholder="Enter last name">
        </div>
        <div class="input-group">
            <label>Email:</label>
            <input type="email" name="email" placeholder="Enter email">
        </div>
        <div class="input-group">
            <label>Password:</label>
            <input type="password" name="password" placeholder="Enter password">
        </div>
        <div class="input-group">
            <label>Confirm Password:</label>
            <input type="password" name="confirmpassword" placeholder="Enter password again">
        </div>
        <div class="input-group">
            <label for="worker-toggle">Worker?</label>
            <label class="switch">
                <input type="checkbox" id="worker-toggle">
                <span class="slider round"></span>
            </label>
        </div>
        <button type="submit">Register</button>
        <label class="create">Have an account?</label>
        <a href="index.htm">Log in</a>
    </form>
</div>

